<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="20" HorizontalAlignment="Center" Grid.Row="0">
            email
        </TextBlock>
        <TextBox Grid.Row="1" Background="AliceBlue" Margin="5" FontSize="20" VerticalAlignment="Center" x:Name="email">
            
        </TextBox>
        <TextBlock FontSize="20" HorizontalAlignment="Center" Grid.Row="2">
            password
        </TextBlock>
        <TextBox Grid.Row="3" Background="AliceBlue" Margin="5" FontSize="20" VerticalAlignment="Center" x:Name="password">

        </TextBox>
        <Button Grid.Row="4" Margin="5" Background="CadetBlue" FontSize="25" Click="ButtonClick" x:Name="b">
            sign in
        </Button>
    </Grid>
</Window>
