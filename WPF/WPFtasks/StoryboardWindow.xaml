        <Button x:Name="b" Grid.Row="1" Background="Aqua">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="b" Storyboard.TargetProperty="Opacity" 
                                             From="1.0" To="0.0" Duration="0:0:2" AutoReverse="True" RepeatBehavior="Forever"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
    </Grid>
</Window>
